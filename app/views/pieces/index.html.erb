<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg block" id="notice">
    <%= notice %>
  </p>
<% end %>

<turbo-frame id="new-piece" class="mt-4">
